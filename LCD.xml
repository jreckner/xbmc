<lcd>
   <!-- set this to video,music to disable the LCD on playback of music and video-->
   <disableonplay>video</disableonplay>
   <navigation>
      <line>$INFO[System.CurrentWindow]</line>
      <line>$INFO[System.CurrentControl]</line>
   </navigation>
   <music>
      <line>$INFO[LCD.PlayIcon] $INFO[Player.Time]/$INFO[Player.Duration]</line>
      <line>$INFO[MusicPlayer.Title]/$INFO[MusicPlayer.Album]  $INFO[MusicPlayer.Artist]</line>
   </music>
   <video>
      <line>$INFO[LCD.PlayIcon] $INFO[VideoPlayer.Title]   $INFO[Player.Time]/$INFO[Player.Duration]</line>
      <line>$INFO[LCD.ProgressBar]</line>
   </video>
   <general>
      <line>$INFO[System.BuildVersion] on $INFO[System.BuildDate] for $INFO[System.TotalUptime]</line>
      <line>CPU: $INFO[LCD.CPUTemperature]   GPU: $INFO[LCD.GPUTemperature]</line>
   </general>
   <screensaver>
      <line>$INFO[LCD.TimeWide21]</line>
      <line>$INFO[LCD.TimeWide22]</line>
   </screensaver>
</lcd>
