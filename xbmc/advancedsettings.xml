<advancedsettings>
  <loglevel hide="false">1</loglevel>
  <cputempcommand>sensors|sed -ne "s/CPU Temperature: \+[-+]\([0-9]\+\).*/\1 C/p"</cputempcommand> 
  <gputempcommand>echo "$(nvidia-settings -c :0.0 -tq gpuCoreTemp) C"</gputempcommand>
  <lcd>
    <rows>2</rows>
    <columns>20</columns>
    <scrolldelay>5</scrolldelay>
  </lcd>
  <video>
    <timeseekforward>15</timeseekforward>
    <timeseekbackward>-15</timeseekbackward>
    <timeseekforwardbig>300</timeseekforwardbig>
    <timeseekbackwardbig>-300</timeseekbackwardbig>
    <ignoreatstart>60</ignoreatstart>
  </video>
  <videodatabase>
    <type>mysql</type>
    <host>firefly.home.lan</host>
    <port>3306</port>
    <user>xbmc</user>
    <pass>xbmc</pass>
    <name>xbmc_videodb75</name>
  </videodatabase>
  <network>
    <cachemembuffersize>104857600</cachemembuffersize>
  </network>
</advancedsettings>
